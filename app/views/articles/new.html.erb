<div class="new-article-container">
  <h1 class="new-article-title">New Article</h1>

  <%= form_with(model: @article, local: true) do |form| %>
    <% if @article.errors.any? %>
      <div id="error_explanation" class="error-explanation">
        <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul class="error-messages">
          <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-field">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-input' %>
    </div>

    <div class="form-field">
      <%= form.label :content, class: 'form-label' %>
      <%= form.text_area :content, class: 'form-textarea' %>
    </div>

    <div class="form-actions">
      <%= form.submit 'Create Article', class: 'btn btn-primary submit-btn' %>
    </div>
  <% end %>

  <%= link_to 'Back', articles_path, class: 'btn btn-secondary back-btn' %>
</div>
