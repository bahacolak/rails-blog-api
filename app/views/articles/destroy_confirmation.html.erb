<h2>Are you sure you want to delete this article?</h2>

<p>Title: <%= @article.title %></p>
<p>Content: <%= @article.content %></p>

<%= form_with model: @article, url: article_path(@article), method: :delete, local: true do %>
  <%= submit_tag 'Confirm Delete', class: 'btn btn-danger' %>
  <%= link_to 'Cancel', article_path(@article), class: 'btn btn-secondary' %>
<% end %>
