<div class="delete-confirmation-container">
  <h2 class="confirmation-title">Are you sure you want to delete this article?</h2>

  <p class="confirmation-info">Title: <%= @article.title %></p>
  <p class="confirmation-info">Content: <%= @article.content %></p>

  <%= form_with model: @article, url: article_path(@article), method: :delete, local: true do |form| %>
    <%= submit_tag 'Confirm Delete', class: 'btn btn-danger confirm-btn' %>
    <%= link_to 'Cancel', article_path(@article), class: 'btn btn-secondary cancel-btn' %>
  <% end %>
</div>
