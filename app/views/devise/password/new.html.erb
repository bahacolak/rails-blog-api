<div class="forgot-password-container">
  <h2 class="forgot-password-title">Forgot your password?</h2>

  <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), local: true) do |f| %>
    <div class="form-field">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-input", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
